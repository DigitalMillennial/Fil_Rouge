{# templates/accueil/categories.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<section id="categories-section" class="categories-section">
  <div class="categories-container">
    {% for category in categories %}
    <div class="category">
        <a href="{{ path('plats_by_category', {categorie_id: category.id}) }}">
        <img src="{{ asset('img/category/' ~ category.image) }}" alt="{{ category.libelle }}">
        <p>{{ category.libelle }}</p>
      </a>
    </div>
    {% endfor %}
  </div>
</section>
{% endblock %}
